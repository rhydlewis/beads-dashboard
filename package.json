{
  "name": "beads-dashboard",
  "version": "0.1.3",
  "description": "A local, real-time lean metrics dashboard for Beads",
  "main": "index.js",
  "bin": {
    "beads-dashboard": "./bin/beads-dashboard.js"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"tsx src/server/index.ts\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.node.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "start": "NODE_ENV=production node dist/server/server/index.js",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.node.json --noEmit"
  },
  "keywords": [
    "beads",
    "dashboard",
    "metrics",
    "lean",
    "kanban"
  ],
  "author": "Rhyd Lewis",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/beads-dashboard.git"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "lucide-react": "^0.468.0",
    "marked": "^15.0.6",
    "minimist": "^1.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/express": "^5.0.0",
    "@types/marked": "^6.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^9.1.2",
    "jsdom": "^25.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  }
}
